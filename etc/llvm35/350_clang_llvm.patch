+		SmallVector<llvm::Value*, 3> arg_info;
+		const auto parm = FD->getParamDecl(i);
+		const auto clang_type = parm->getType();
+		
+		// #0: storage type (stream or image)
+		if(clang_type->isPointerType() || clang_type->isReferenceType()) {
