+		}
+		else if(clang_type->isImageType()) {
+			arg_info.push_back(llvm::MDString::get(Context, "image"));
+			
+			// #1: access qualifier
+			const OpenCLImageAccessAttr *A = parm->getAttr<OpenCLImageAccessAttr>();
